@model Task1
@{
	ViewData["Title"] = "Create New Account";
}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
	<div class="card shadow-lg p-4 rounded-4" style="width:100%;">
        <p class="text-center  mb-3">Create New Task✔</p>
		<form asp-action="Create">
			<div class="mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="e.g:Task No1"/>
                <span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" placeholder="e.g:Programming is so cool!"/>
                <span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="mb-3">
                <label asp-for="Projectid" class="control-label">Project Name</label>
                <select asp-for="Projectid" class="form-control" asp-items="ViewBag.Projectid">
                    <option value="">--Select Project--</option>
                </select>
                <span asp-validation-for="Projectid"></span>
			</div>
			<div class="mb-3">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" placeholder="e.g:Completed!"/>
                <span asp-validation-for="Status" class="text-danger"></span>
			</div>
            <div class="mb-3">
                <label asp-for="Priority" class="control-label"></label>
                <input asp-for="Priority" class="form-control" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Due_date" class="control-label"></label>
                <input asp-for="Due_date" class="form-control" />
                <span asp-validation-for="Due_date" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Created_at" class="control-label"></label>
                <input asp-for="Created_at" class="form-control" />
                <span asp-validation-for="Created_at" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="assignedToId">Assign To</label>
                <select asp-for="assignedToId" asp-items="ViewBag.Users" name="assignto" class="form-control">
                    <option value="">--Choose User--</option>
                </select>
                <span asp-validation-for="assignedToId" class="text-danger"></span>
            </div>
			<button type="submit" class="btn btn-primary w-100 mt-2">Submit</button>
		</form>
	</div>
</div>
