@model Task_manager_Project.Models.User

@{
    ViewData["Title"] = "User Details";
}


<div class="container py-5">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card shadow-lg rounded-4">
				<div class="card-body">
					<h3 class="card-title text-center mb-4">Task Details📁</h3>
					<dl class="row">
						<dt class="col-sm-4">Username</dt>
						<dd class="col-sm-8">@Model.Name</dd>
						<dt class="col-sm-4">Email</dt>
						<dd class="col-sm-8">@Model.Email</dd>
						<dt class="col-sm-4">Role</dt>
						<dd class="col-sm-8">@Model.role</dd>
						<dt class="col-sm-4">Created At</dt>
						<dd class="col-sm-8">@Model.created_at</dd>
						<dt class="col-sm-4">Last Login</dt>
						<dd class="col-sm-8">@Model.last_login</dd>
					</dl>
					<div class="mt-4 d-flex justify-content-between">
						<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">Edit</a>
						<a asp-action="Index" class="btn btn-outlin-secondary px-4">Back</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
