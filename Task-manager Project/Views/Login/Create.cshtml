@model User
@{
	ViewData["Title"] = "Create New Account";
}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
	<div class="card shadow-lg p-4 rounded-4" style="width:100%; max-width:450px;">
		<h2 class="text-center mb-3">welcome👋</h2>
		<p class="text-center text-muted  mb-4">Sign up</p>
		<form asp-action="Create">
			<div class="mb-3">
				<label asp-for="Name" class="form-label">Full Name</label>
				<input asp-for="Name" class="form-control" placeholder="e.g: mhd Ahmad" />
				<span asp-validation-for="Name" class="text-danger small"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Email" class="form-label">E-Mail</label>
				<input asp-for="Email" class="form-control" placeholder="e.g: youremail@gmail.com" />
				<span asp-validation-for="Email" class="text-danger small"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Password_hash" class="form-label">Enter Password</label>
				<input asp-for="Password_hash" type="password" class="form-control" placeholder="********" />
				<span asp-validation-for="Password_hash" class="text-danger small"></span>
			</div>
			<div class="mb-3">
				<label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
				<input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="********" />
				<span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
			</div>
			<button type="submit" class="btn btn-primary w-100 mt-2">Sign Up</button>
			<div class="text-center mt-3">
				<small class="text-muted">Have An Account?<a asp-action="Login">Login!</a></small>
			</div>
		</form>
	</div>
</div>